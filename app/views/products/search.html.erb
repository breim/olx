<div id="container">
  <div class="container">
    <h3>Resultado da busca <small>Foram encontrados <%= pluralize(@products.count, 'resultado') %></small</h3>
    <% @products.each do |product| %>
    <div class="item thumbnail">
      <%= link_to image_tag(product.image.url(:small)), product, class: 'img-responsive' %>
      <hr/>
      <div class="form-group">
        <h4><%= link_to product.title, product %></h4>
        <small class='text-muted'><%= time_ago_in_words(product.created_at) %></small>
      </div>
    </div>
  <% end %>
  </div>
</div>

<script>
$("#container").gridalicious();
</script>